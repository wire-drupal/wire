{
    "name": "wire-drupal/wire",
    "description": "Dynamic interfaces for Drupal.",
    "type": "drupal-module",
    "license": "MIT",
    "docs": "https://wire-drupal.com/docs",
    "security": "https://github.com/wire-drupal/wire/blob/main/.github/SECURITY.md",
    "authors": [
        {
            "name": "Cornel Andreev",
            "email": "hugronaphor@gmail.com"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-json": "*",
        "drupal/core": "^10.2 || ^11",
        "illuminate/support": "^10.6"
    },
    "require-dev": {
        "slevomat/coding-standard": "~8.0",
        "php-parallel-lint/php-parallel-lint": "^1.3"
    },
    "suggest": {
        "drush/drush": "To generate Wire components Drush ^12 is required"
    },
    "autoload": {
        "files": [
            "src/TemporaryUploadedFile.php"
        ]
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
